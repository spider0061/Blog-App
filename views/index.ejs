<% include ./partials/header %>

<div class="ui main text container">
	<div class="ui huge header">Restful Blog App</div>
	<div class="ui top attached segment">
		<div class="divided items">
			<% blogs.forEach(function(blog){ %>
			 	<div>
			 		<div class="item">
			 			<div class="ui image"><img src=" <%= blog.image %>">
			 			 </div>
			 			<div class="content">
				 			<a class="ui huge header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
				 			
				 			<div class="meta">
				 				<span> <%= blog.created.toDateString() %></span>			
				 			</div>
				 			<div class="description">
				 				<p><%- blog.body.substring(0,100) %>...</p>			

				 			</div>
				 			<div class="extra">
				 			<a  class="ui basic huge black button" href="/blogs/<%= blog._id %>">Read More!</a>	
				 			<i class="right chevron icon"></i>
				 			</div>
			 			</div>
			 		
			 		
			 	</div> 
			<% }) %>
		</div>
	</div>
</div>
<% include ./partials/footer %>